<!-- check if current_user exists --> 
<% if current_user %>
  <!-- check to see if that user already gave a like for the post -->
  <% if like = current_user.likes.find_by({post_id: post.id}) %>
    <!-- display a form with the option to delete the like already given -->
    <form method="POST" action="/likes/ <%= like.id %>">
        <input type = "hidden" name="_method" value="delete">
        <button class ="button user-like" type="submit">
        <%= post.like_count %> likes 
        </button>
    </form>
  <% else %>
    <!-- display existing form to create a like -->
    <form method="POST" action="/likes">
        <input type = "hidden" name="post_id" value="<%= post.id %>">
        <button class ="button" type="submit">
        <%= post.like_count %> likes 
        </button>
    </form>
  <% end %>
<% else %>
    <!-- show like count without any form -->
    <%= post.like_count %> likes 
<% end %>